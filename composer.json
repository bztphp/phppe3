	"keywords": [ "framework", "phppe", "cms", "kiss", "security", "opensource", "wyswyg", "raspberry", "raspberry pi", "rpi", "arm" ],

	"version": "3.0.0",
	"version_normalized": "3.0.0.0",
	"type": "project",
	"license": "LGPL-3.0+",

	"repositories":[
		{"type":"composer","url":"https://raw.githubusercontent.com/bztsrc/phppe3/master/"}
	],

	"require": {
		"php": ">=7.0",
		"phppe/Core": ">=3.0"
	},

	"suggest": {
		"phppe/bootstrap": "*",
		"phppe/CMS": "*",
		"phppe/Extensions": "*",
		"phppe/Developer": "*",
		"phppe/GPIO": "*"
	},

	"support": {
		"source": "https://github.com/bztsrc/phppe3/"
	},

	"maintainer": { "name": "bzt" },

	"scripts":{
	    "post-install-cmd":"sudo php public/index.php --diag",
	    "post-update-cmd": "sudo php public/index.php --diag"
	}
}
